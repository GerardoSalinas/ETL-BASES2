<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <script src="https://kit.fontawesome.com/6ed790b2ab.js" crossorigin="anonymous"></script>
    <title>Data Flow</title>
</head>
<body style="height: 100vh; width: 100vw; background-color: #f4f6ff">
    <div class="d-flex h-100 w-100">

        <div class="d-flex justify-content-center flex-column align-items-center w-20 shadow p-color me-5">
          <div class="d-flex justify-content-between align-items-center  btn btn-primary h-10 w-75 m-3" draggable="true" ondragstart="dragStartHandler(event)" id="draggable-source">
            <h6>OLE DB Source</h6>
            <div class="d-flex align-items-center">
              <i class="fa-regular fa-pen-to-square" onclick="editDataFlowBlockName(this)"></i>
              <i class="fa-solid fa-trash c-danger" onclick="deleteDataFlowBlock(this)"></i>
              <input type="number" min="0" class="form-control ms-1">
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center  btn btn-primary h-10 w-75 m-3 " draggable="true" ondragstart="dragStartHandler(event)" id="draggable-conversion">
              <h6>Data Conversion</h6>
              <div class="d-flex align-items-center">
                <i class="fa-regular fa-pen-to-square" onclick="editDataFlowBlockName(this)"></i>
                <i class="fa-solid fa-trash c-danger" onclick="deleteDataFlowBlock(this)"></i>
                <input type="number" min="0" class="form-control ms-1">
              </div>
          </div>

          <div class="d-flex justify-content-between align-items-center  btn btn-primary h-10 w-75 m-3" draggable="true" ondragstart="dragStartHandler(event)" id="draggable-destination">
              <h6>OLE DB Destination</h6>
              <div class="d-flex align-items-center">
                <i class="fa-regular fa-pen-to-square" onclick="editDataFlowBlockName(this)"></i>
                <i class="fa-solid fa-trash c-danger" onclick="deleteDataFlowBlock(this)"></i>
                <input type="number" min="0" class="form-control ms-1">
              </div>
        </div>
    </div>

        <main class="w-100 h-100 p-color">
          <nav class="navbar navbar-expand-lg bg-body-tertiary w-100">
            <div class="container-fluid">
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/home"
                      >Control Flow</a
                    >
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" href="/dataFlow">Data Flow</a>
                  </li>
                  <li class="nav-item" onclick="getBlocksInOrder()">
                    <a class="nav-link" href="/run">RUN</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
          <!-- blocks go in this div -->
          <div class="h-90 d-flex flex-column" ondrop="dropHandler(event, toggleModal)" ondragover="dragOverHandler(event)" id="data-flow-blocks-container"></div>
          <!-- modal to change block name -->
          <div class="modal" tabindex="-1" id="edit-modal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Modal title</h5>
                  <button type="button" class="btn-close" onclick="editDataFlowBlockName()" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <label>Cambia el nombre del bloque</label>
                  <input class="form-control" type="text" placeholder="Edit name" id="edit-input">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="editDataFlowBlockName()">Close</button>
                  <button type="button" class="btn btn-primary" onclick="changeBlockNameOnSave()">Save changes</button>
                </div>
              </div>
            </div>
          </div>

          <!-- form modal -->
          <div class="modal" tabindex="-1" id="form-modal">
            <div class="modal-dialog modal-dialog-scrollable ">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Conexión</h5>
                  <button id="close-form-modal-btn" type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <label for="serverName" >Nombre del servidor</label>
                  <input class="form-control" type="text" name="serverName" id="serverName">

                  <label for="dbName" >Nombre de la Base de Datos</label>
                  <input class="form-control" type="text" name="dbName" id="dbName">

                  <label for="dbName" >Usuario</label>
                  <input class="form-control" type="text" name="user" id="userName">

                  <label for="dbName" >Contraseña</label>
                  <input class="form-control" type="password" name="password" id="userPassword">
                  
                  <label for="sqlCommandInput" >Comando SQL</label>
                  <textarea name="sqlCommand" id="sqlCommandInput" placeholder="SELECT * FROM users;" rows="10" cols="45"></textarea>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" onclick="dbConnection()" data-bs-toggle="modal" data-bs-target="#staticBackdrop">OK</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Notification Modal -->
          <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  ...
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-bs-dismiss="modal" >Entendido</button>
                </div>
              </div>
            </div>
          </div>

        </main>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <script src="/js/utils/dragAndDrop.js"></script>
      <script src="/js/dataFlowController/home.js"></script>
      <script src="/js/dataFlow/dataFlow.js"></script>
</body>
</html>